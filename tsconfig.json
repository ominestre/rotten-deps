{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "pretty": true,
    "types": [
      "node",
      "yargs",
      "mocha"
    ],
    "outDir": "./build",
    "allowJs": true,
    "target": "ES5",
    "strict": true,
    "alwaysStrict": true,
  },
  "include": [
    "./src/**/*",
    "./test/**/*",
  ],
  "exclude": []
}
